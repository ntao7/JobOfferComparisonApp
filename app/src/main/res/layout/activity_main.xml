<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Main Menu"
        android:textSize="34sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/currentBtn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Enter/Edit Current Job Details"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <Button
        android:id="@+id/offerBtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Enter Job Offers"
        app:layout_constraintEnd_toEndOf="@id/currentBtn"
        app:layout_constraintStart_toStartOf="@id/currentBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <Button
        android:id="@+id/adjSettingsBtn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Adjust Comparison Settings"
        app:layout_constraintEnd_toEndOf="@id/currentBtn"
        app:layout_constraintStart_toStartOf="@id/currentBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <Button
        android:id="@+id/compareBtn"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:text="Compare Job Offers"
        app:layout_constraintEnd_toEndOf="@id/currentBtn"
        app:layout_constraintStart_toStartOf="@id/currentBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65" />

</androidx.constraintlayout.widget.ConstraintLayout>